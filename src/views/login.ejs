<!DOCTYPE html>
<html lang="en">

<head>
      <%- include('./partials/nav.ejs') %>
    <%- include('./partials/head.ejs', { pageTitle: 'Loguear Usuario' }) %>
</head>

<body>
    <br>
    
    <br>
    <br>
    
    <br>
    <form class="container" action="/users/login" method="POST">
        <h2>Login</h2>

        <div>
            <label>Nombre:</label>
            <input type="email" name="email" value="<%= locals?.oldBodyData?.email %>" required>
        </div>
        <div class="text-danger">
            <%= locals.messageErrors && messageErrors.email !=undefined ? messageErrors.email.msg : "" %>
        </div>
        <div>
            <label>Password:</label>

            <input type="password" name="password" value="<%= locals?.oldBodyData?.password %>">
            <div class="text-danger">
                <%= locals?.messageErrors?.password?.msg %>
            </div>
        </div>
        <button type="submit">Entrar</button>

    </form>
</body>

</html>
